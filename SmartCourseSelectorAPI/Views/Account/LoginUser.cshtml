@model SmartCourseSelectorWeb.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-card {
            background: #fff;
            padding: 40px 50px;
            border-radius: 100px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 25px;
                color: darkslateblue;
                font-size: 2rem;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group input {
                border-radius: 100px;
                border: 1px solid #ddd;
                padding: 12px;
                font-size: 1.1rem;
                width: 100%;
            }

                .form-group input:focus {
                    border-color: #007bff;
                    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                }

        button {
            font-size: 1.2rem;
            padding: 12px;
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 10px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #0056b3;
            }

        .text-center {
            margin-top: 10px;
        }

            .text-center a {
                color: #007bff;
                text-decoration: none;
                font-weight: 500;
            }

                .text-center a:hover {
                    text-decoration: underline;
                }

        .error-message {
            color: red;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h2>Login</h2>
        <form asp-action="LoginUser" method="post">
            <div class="form-group">
                <label for="Role">Role</label>
                <select asp-for="Role" class="form-control">
                    <option value="Student">Student</option>
                    <option value="Advisor">Advisor</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Username">Username</label>
                <input asp-for="Username" class="form-control" id="Username" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit">Login</button>
            <div class="text-center">
                <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password?</a>
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <p class="error-message">@ViewBag.Message</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
