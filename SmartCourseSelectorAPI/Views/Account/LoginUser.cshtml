@model SmartCourseSelectorWeb.Models.LoginViewModel

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #f3f4f6;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .content-container {
        max-width: 400px;
        width: 100%;
        background-color: ghostwhite;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 50px;
    }

    .login-card {
        background: #fff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 1.8rem;
            font-weight: bold;
            color: black;
        }

    .role-selection {
        display: flex;
        justify-content: center;
        gap: 45px;
        margin-bottom: 30px;
    }

        .role-selection label {
            cursor: pointer;
            text-align: center;
        }

        .role-selection img {
            width: 100px;
            height: 100px;
            border-radius: 10%;
        }

        .role-selection input {
            display: none;
        }

        .role-selection label input:checked + img {
            border: 6px solid green;
            border-radius: 10%;
        }

    .form-group {
        margin-bottom: 20px;
    }

    input.form-control {
        border-radius: 5px;
        padding: 12px;
        font-size: 1.1rem;
    }

    button {
        font-size: 1.2rem;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
    }

        button:hover {
            background-color: yellowgreen;
        }

    .forgot-password {
        text-align: center;
        margin-top: 20px;
        font-size: 1rem;
    }

        .forgot-password a {
            color: #007bff;
            text-decoration: none;
        }

            .forgot-password a:hover {
                color: yellowgreen;
            }

    .message {
        color: red;
        text-align: center;
        margin-top: 10px;
    }
</style>

<div class="content-container">
    <div class="login-card">
        <h2>KTU BYS</h2>
        <form asp-action="LoginUser" method="post" id="loginForm">
            <div class="role-selection">
                <label>
                    <input asp-for="Role" type="radio" value="Student" checked />
                    <img src="~/images/Students.png" alt="Student" />
                    <div>Student</div>
                </label>
                <label>
                    <input asp-for="Role" type="radio" value="Advisor" />
                    <img src="~/images/Advisors.png" alt="Advisor" />
                    <div>Advisor</div>
                </label>
            </div>

            <div class="form-group">
                <label for="Username">E-mail</label>
                <input asp-for="Username" class="form-control" id="Username" placeholder="Enter your E-mail" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit">Login</button>

            <div class="forgot-password">
                <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password</a>
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <p class="message">@ViewBag.Message</p>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
