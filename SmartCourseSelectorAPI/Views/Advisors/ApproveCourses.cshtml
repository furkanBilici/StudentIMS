@model SmartCourseSelectorWeb.Models.Advisor

@{
    ViewData["Title"] = "Approve Courses";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f6f9;
        color: #333;
    }

    .container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    h2 {
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 20px;
    }

    h4 {
        color: #34495e;
        font-size: 18px;
        margin-bottom: 15px;
    }

    p {
        margin-bottom: 10px;
        font-size: 16px;
    }

    strong {
        color: #2c3e50;
    }

    .alert {
        background-color: #f9e6e6;
        color: #c0392b;
        padding: 10px;
        border: 1px solid #e74c3c;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        text-align: left;
        padding: 12px;
        border: 1px solid #ddd;
    }

    th {
        background-color: #2980b9;
        color: #ffffff;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #d7e8f7;
    }

    .btn {
        display: inline-block;
        padding: 10px 15px;
        font-size: 14px;
        color: #ffffff;
        text-decoration: none;
        background-color: #2980b9;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #1f639a;
        }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        font-size: 14px;
        text-decoration: none;
        color: #c0392b;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #a32121;
        }
</style>

<div class="container">
    <h2>Approve Courses</h2>
    <h4>Advisor Information</h4>
    <p><strong>Name:</strong> @Model.FullName @Model.Title</p>
    <p><strong>Department:</strong> @Model.Department</p>

    <hr />

    @if (Model.Students == null || !Model.Students.Any())
    {
        <div class="alert">
            No students are assigned to you.
        </div>
    }
    else
    {
        <h4>Student List</h4>
        <table>
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Student ID</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.FirstName @student.LastName</td>
                        <td>@student.StudentID</td>
                        <td>@student.Department</td>
                        <td>
                            <a asp-controller="Advisors" asp-action="ViewStudentCourses" asp-route-studentId="@student.StudentID" class="btn">
                                View Courses
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="https://localhost:7199/Account/LoginUser" class="back-link">Logout</a>
    }
</div>
